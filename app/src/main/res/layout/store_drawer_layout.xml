<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/store_left_drawer_bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:paddingBottom="@dimen/app_master_common_activity_padding"
        android:scrollbars="none"
        android:scrollingCache="false"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/store_left_drawer_safe_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_left_drawer_item_height"
                android:background="@drawable/store_left_drawer_item_selector">

                <ImageView
                    android:layout_width="@dimen/store_left_drawer_item_height"
                    android:layout_height="@dimen/store_left_drawer_item_height"
                    android:scaleType="centerInside"
                    android:src="@mipmap/store_left_drawer_unmonitored_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="AAA"
                    android:textColor="@color/app_master_color_white"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_bg_color_normal" />

            <RelativeLayout
                android:id="@+id/store_left_drawer_manager_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_left_drawer_item_height"
                android:background="@drawable/store_left_drawer_item_selector">

                <ImageView
                    android:id="@+id/store_left_drawer_manager_icon"
                    android:layout_width="@dimen/store_left_drawer_item_height"
                    android:layout_height="@dimen/store_left_drawer_item_height"
                    android:scaleType="centerInside"
                    android:src="@mipmap/store_left_drawer_unmonitored_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/store_left_drawer_manager_icon"
                    android:text="AAA"
                    android:textColor="@color/app_master_color_white"
                    android:textSize="18.0sp" />

                <RelativeLayout
                    android:id="@+id/store_left_drawer_manager_tip_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/app_master_store_margin_10"
                    android:background="@drawable/store_drawer_item_tip_bg"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/store_left_drawer_manager_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fffe5150"
                        android:textSize="14.0sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_bg_color_normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_bg_color_normal" />

            <LinearLayout
                android:id="@+id/store_left_drawer_setting_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_left_drawer_item_height"
                android:background="@drawable/store_left_drawer_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_master_store_margin_16"
                    android:text="AAA"
                    android:textColor="@color/app_master_color_white"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_divider_color" />

            <LinearLayout
                android:id="@+id/store_left_drawer_share_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_left_drawer_item_height"
                android:background="@drawable/store_left_drawer_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_master_store_margin_16"
                    android:text="AAA"
                    android:textColor="@color/app_master_color_white"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_divider_color" />

            <RelativeLayout
                android:id="@+id/store_left_drawer_update_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_left_drawer_item_height"
                android:background="@drawable/store_left_drawer_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_master_store_margin_16"
                    android:text="AAA"
                    android:textColor="@color/app_master_color_white"
                    android:textSize="14.0sp" />

                <RelativeLayout
                    android:id="@+id/store_left_drawer_update_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/app_master_store_margin_10"
                    android:background="@drawable/store_drawer_item_tip_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAA"
                        android:textColor="#fffe5150"
                        android:textSize="14.0sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_divider_color" />

            <LinearLayout
                android:id="@+id/store_left_drawer_feedback_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_left_drawer_item_height"
                android:background="@drawable/store_left_drawer_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_master_store_margin_16"
                    android:text="AAA"
                    android:textColor="@color/app_master_color_white"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_divider_color" />

            <LinearLayout
                android:id="@+id/store_left_drawer_about_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/store_left_drawer_item_height"
                android:background="@drawable/store_left_drawer_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_master_store_margin_16"
                    android:text="AAA"
                    android:textColor="@color/app_master_color_white"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/store_left_drawer_divider_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>